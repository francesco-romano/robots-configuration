<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD robotInterface 1.0//EN" "http://www.icub.org/DTD/robotInterfaceV1.0.dtd">

<devices robot="iCubGenova04" build="1">
  <device name="icub_all_joints_mc_wrapper" type="controlboardwrapper2">

      <param name="period"> 10 </param>
      <param name="name">   /icub/all_joints </param>
      <param name="joints"> 49 </param>
      
      <paramlist name="networks">
       

        <elem name="head">            0  1   0  1 </elem>  <!-- 2 -->
        <elem name="torso">           2  4   0  2 </elem>  <!-- 3 -->

	<elem name="right_arm_firstset">   5   8   0  3 </elem> <!-- 4 -->
	<elem name="right_arm_secondset">  9  12   0  3 </elem> <!-- 4 -->
	<elem name="right_arm_thirdset">  13  16   0  3 </elem> <!-- 4 -->
	<elem name="right_arm_fourthset"> 17  20   0  3 </elem> <!-- 4 -->

	<elem name="left_arm_firstset">   21  24   0  3 </elem> <!-- 4 -->
	<elem name="left_arm_secondset">  25  28   0  3 </elem> <!-- 4 -->
	<elem name="left_arm_thirdset">   29  32   0  3 </elem> <!-- 4 -->
	<elem name="left_arm_fourthset">  33  36   0  3 </elem> <!-- 4 -->

	<elem name="left_leg_firstset">  37  40  0  3 </elem> <!-- 4 -->
	<elem name="left_leg_secondset"> 41  42  0  1 </elem> <!-- 2 -->

	<elem name="right_leg_firstset">  43  46  0  3 </elem> <!-- 4 -->
	<elem name="right_leg_secondset"> 47  48  0  1 </elem> <!-- 2 -->

      </paramlist>

      <group name ="ROS">
        <param name="useROS"> only </param>
        <param name="ROS_topicName">  /icub/joint_states </param>
        <param name="ROS_nodeName">   /icub_node </param>
      </group>
      
      <action phase="startup" level="5" type="attach">
        <paramlist name="networks">  
   
         <elem name="head">        head-j0_1-mc    </elem>     
         <elem name="torso">       torso_mc   </elem>

 	 <elem name="right_arm_firstset">  right_arm-j0_3-mc </elem>
         <elem name="right_arm_secondset"> right_arm-j4_7-mc </elem> 
         <elem name="right_arm_thirdset">  right_arm-j8_11-mc </elem> 
	 <elem name="right_arm_fourthset"> right_arm-j12_15-mc </elem>

 	 <elem name="left_arm_firstset">  left_arm-j0_3-mc </elem>
         <elem name="left_arm_secondset"> left_arm-j4_7-mc </elem> 
         <elem name="left_arm_thirdset">  left_arm-j8_11-mc </elem> 
	 <elem name="left_arm_fourthset"> left_arm-j12_15-mc </elem>

         <elem name="left_leg_firstset">  left_upper_leg_mc </elem> 
	 <elem name="left_leg_secondset"> left_lower_leg_mc </elem>

         <elem name="right_leg_firstset">  right_upper_leg_mc </elem> 
	 <elem name="right_leg_secondset"> right_lower_leg_mc </elem>


         </paramlist>
      </action>

      <action phase="shutdown" level="5" type="detach" />

  </device>
</devices>


