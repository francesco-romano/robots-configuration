<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE devices PUBLIC "-//YARP//DTD robotInterface 1.0//EN" "http://www.icub.org/DTD/robotInterfaceV1.0.dtd">

<devices robot="iCubGenova02" build="1">
  <device name="icub_all_joints_mc_wrapper" type="controlboardwrapper2">

      <param name="period"> 10 </param>
      <param name="name">   /icub02/all_joints </param>
      <param name="joints"> 50 </param>
      
      <paramlist name="networks">
       
        <elem name="head_firstset">   0  1   0  1 </elem>  <!-- 2 -->
        <elem name="head_secondset">  2  2   0  0 </elem>  <!-- 1 -->
        <elem name="torso">           3  5   0  2 </elem>  <!-- 3 -->

	<elem name="right_arm_firstset">   6   9   0  3 </elem> <!-- 4 -->
	<elem name="right_arm_secondset"> 10  21   0  11 </elem> <!-- 12 -->

	<elem name="left_arm_firstset">   22  25   0  3 </elem> <!-- 4 -->
	<elem name="left_arm_secondset">  26  37   0  11 </elem> <!-- 12 -->

	<elem name="left_leg_firstset">  38  41  0  3 </elem> <!-- 4 -->
	<elem name="left_leg_secondset"> 42  43  0  1 </elem> <!-- 2 -->

	<elem name="right_leg_firstset">  44  47  0  3 </elem> <!-- 4 -->
	<elem name="right_leg_secondset"> 48  49  0  1 </elem> <!-- 2 -->

      </paramlist>

      <group name ="ROS">
        <param name="useROS"> true </param>
        <param name="ROS_topicName">  /icub02/joint_states </param>
        <param name="ROS_nodeName">   /icub02_node </param>
      </group>
      
      <action phase="startup" level="5" type="attach">
        <paramlist name="networks">  
   
         <elem name="head_firstset">        head-j0_1-mc    </elem>
         <elem name="head_secondset">        head-j2_5-mc       </elem>

         <elem name="torso">       torso_mc   </elem>

 	    <elem name="right_arm_firstset">  right_upper_arm_mc </elem>
         <elem name="right_arm_secondset"> right_lower_arm_mc </elem> 

 	    <elem name="left_arm_firstset">  left_upper_arm_mc </elem>
         <elem name="left_arm_secondset"> left_lower_arm_mc </elem> 

         <elem name="left_leg_firstset">  left_upper_leg_mc </elem> 
	    <elem name="left_leg_secondset"> left_lower_leg_mc </elem>

         <elem name="right_leg_firstset">  right_upper_leg_mc </elem> 
	     <elem name="right_leg_secondset"> right_lower_leg_mc </elem>


         </paramlist>
      </action>

      <action phase="shutdown" level="5" type="detach" />

  </device>
</devices>


